[core]
    pager = delta

[user]
    name = Dan Jones

[init]
    defaultBranch = main

[pull]
    ff = only

[diff]
    colorMoved = default

[difftool]
    prompt = true

[tag]
    sort = -version:refname

[versionsort]
    prereleaseSuffix = -pre
    prereleaseSuffix = .pre
    prereleaseSuffix = -beta
    prereleaseSuffix = .beta
    prereleaseSuffix = -rc
    prereleaseSuffix = .rc

[alias]
    # List available aliases
    aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\1/g'
    lol = log --graph --pretty=format:\"%C(auto)%h%d%Creset %C(cyan)(%ci)%Creset %C(green)%cn <%ce>%Creset %s\"
    oops = commit --amend --no-edit
    reword = commit --amend
    # Undo last commit but keep changed files in stage
    uncommit = reset --soft HEAD~1
    # Remove file(s) from Git but not from disk
    untrack = rm --cache --
    log = log --date=format:'%Y-%m-%d %H:%M:%S %a'
    new = lg origin/main..HEAD
    missing = lg HEAD..origin/main
    lg = log --pretty='%C(red)%h%C(yellow)%d%C(white) %s %C(cyan)(%ar)%C(white)'
    push-hard = push --force-with-lease
    diff-main = diff origin/main...HEAD
    branch-clean-merged = "!git branch --merged origin/main | rg -v 'main|[*+]\\w*'; echo "Are you sure? [y/N] "; read -r ans; [ "${ans}" = "y" ] && git branch -d $(git branch --merged origin/main | rg -v 'main|[*+]\\w*')" || echo "Cancelled"

[delta]
    navigate = true
    light = false
    side-by-side = true
    true-color = always

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[rebse]
    autoSquash = true
    autoStash = true
    updateRefs = true
    missingCommitsCheck = warn

[merge]
    conflictstyle = diff3

[push]
    autoSetupRemote = true

[rerere]
    enabled = true

[credential "https://github.com"]
    helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
    helper = !/usr/bin/gh auth git-credential
